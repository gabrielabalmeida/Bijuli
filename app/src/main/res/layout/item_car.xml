<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/iv_carro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dp"
        android:contentDescription="@string/iv_imagem" />

    <TextView
        android:id="@+id/tv_modelo"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_carro"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/tv_marca"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_modelo"
        android:layout_below="@+id/tv_modelo"
        android:layout_toRightOf="@+id/iv_carro"
        android:paddingRight="16dp"
        android:textColor="@color/colorSecondText" />

    <View
        android:id="@+id/vw_divisor"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_carro"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimaryText" />

</RelativeLayout>